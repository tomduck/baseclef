<html$if(lang)$ lang="$lang$"$endif$>


<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">

  <!--[if lt IE 9]>
    <script src="/javascript/html5shiv.js"></script>
  <![endif]-->

$if(title)$
  <title>$title$</title>
$endif$
$if(description)$
  <meta name="description" content="$description$" />
$endif$

$include(socialmeta.html5)$

  <!-- CSS -->
  <style type="text/css">code{white-space: pre;}</style>
  <link rel="stylesheet" href="/css/skeleton/normalize.css">
  <link rel="stylesheet" href="/css/skeleton/skeleton.css">
  <link rel="stylesheet" href="/css/open-sans/open-sans.css">
  <link rel="stylesheet" href="/css/font-awesome/font-awesome.css">
  <link rel="stylesheet" href="/css/bassclef.css">

</head>


<body>

  <div class="container">


    <!-- Page header  - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <div class="row">

      <div class="one columns"></div>

      <div class="ten columns centered">
        <header>
          <hr class="u-full-width" />
          <h1 id="title"><a href="https://tomduck.github.io/bassclef/">Bassclef CMS</a></h1>
          <hr class="u-full-width" />
        </header>
      </div> <!-- class="ten columns centered" -->

      <div class="one columns"></div>

    </div> <!-- class="row" -->


    <!-- Page content - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <div class="row">

      <div class="two columns"></div>

      <div class="eight columns">

$if(title)$
        <h1 id="title">$title$</h1>

$endif$
$if(composed-page)$
$else$
$include(social.html5)$
$endif$
        <div class="content-body">

          $body$

        </div> <!-- class="content-body" -->

      </div> <!-- class="eight columns" -->

      <div class="two columns"></div>

    </div> <!-- class="row" -->


    <!-- Page footer  - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <div class="row">

      <div class="one columns"></div>

      <div class="ten columns centered">
        <footer>
          <hr />
          <p>
            <a href="https://tomduck.github.io/bassclef/">
              <img src="/images/originals/powered-by-bassclef.png" alt="powered-by-bassclef" id="powered-by" />
            </a>
          </p>
        </footer>
      </div> <!-- class="ten columns centered" -->

      <div class="one columns"></div>

    </div> <!-- class="row" -->


    <!-- - - - - - - - - - - - - - - - - - -  - - - - - - - - - - - - - - - -->

  </div> <!-- class="container" -->

</body>


</html>
